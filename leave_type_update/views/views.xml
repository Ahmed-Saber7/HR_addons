<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="edit_holiday_status_form_inherit" model="ir.ui.view">
            <field name="name">hr.leave.type.form</field>
            <field name="model">hr.leave.type</field>
            <field name="inherit_id" ref="hr_holidays.edit_holiday_status_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='description']" position="inside">
                    <field name="max_days"/>
                    <field name="gender"/>
                    <field name="religion"/>
                    <field name="leave_type"/>
                    <field name="alternative_employee"/>
                    <field name="take_one_time"/>
                    <field name="check_type_newborn" invisible="1"/>
                    <field name="child_disabled" attrs="{'invisible': [('check_type_newborn', '=', False)]}"/>
                </xpath>
            </field>
        </record>
        <record id="hr_leave_view_form_inherit" model="ir.ui.view">
            <field name="name">hr.leave.form</field>
            <field name="model">hr.leave</field>
            <field name="inherit_id" ref="hr_holidays.hr_leave_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="actual_request_date_from"/>
                    <field name="actual_request_date_to"/>
                    <field name="add_off_days"/>
                    <field name="take_one_time" invisible="1"/>
                    <field name="if_alternative_employee" invisible="1"/>
                    <field name="alternative_employee"
                           attrs="{'invisible': [('if_alternative_employee', '=', False)]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>