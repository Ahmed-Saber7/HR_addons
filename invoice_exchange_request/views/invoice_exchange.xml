<odoo>
    <data>
        <record id="invoice_exchange_form" model="ir.ui.view">
            <field name="name">invoice.exchange.form</field>
            <field name="model">invoice.exchange</field>
            <field name="arch" type="xml">
                <form string="Invoice Exchange Request">
                    <header>
                        <button name="employee_confirm" string="Done" class="oe_highlight" states="draft" type="object"/>
                        <button name="d_manager_confirm" string="Approve" class="oe_highlight" states="d_manager" type="object"/>
                        <button name="hr_manager_confirm" string="Approve" class="oe_highlight" states="hr_manager" type="object" groups="hr.group_hr_user"/>
                        <button name="accounting_manager_confirm" string="Approve" class="oe_highlight" states="accounting_manager" type="object" groups="account.group_account_manager"/>
                        <button name="reject" string="Reject" type="object" states="d_manager,hr_manager,accounting_manager"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Request Name" readonly="1"/>
                            </h1>
                        </div>
                        <group string="Information">
                            <group>
                                <field name="employee_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="request_date" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            </group>
                            <group>

                                <field name="amount" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="reason" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            </group>
                        </group>
                        <group string="Accounting Information">
                            <group>
                                <field name="amount_debit_account_id" attrs="{'readonly': [('state', '!=', 'accounting_manager')]}"/>
                                <field name="amount_credit_account_id" attrs="{'readonly': [('state', '!=', 'accounting_manager')]}"/>
                            </group>
                            <group>
                                <field name="amount_journal_id" attrs="{'readonly': [('state', '!=', 'accounting_manager')]}"/>
                                <field name="amount_account_move_id"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Internal Notes" name="internal_notes">
                                <field name="d_manager_notes" placeholder="Add a note"
                                       attrs="{'readonly': [('state', '!=', 'd_manager')]}"/>
                                <field name="hr_manager_notes" placeholder="Add a note"
                                       attrs="{'readonly': [('state', '!=', 'hr_manager')]}"/>
                                <field name="accounting_manager_notes" placeholder="Add a note"
                                       attrs="{'readonly': [('state', '!=', 'accounting_manager')]}"/>
                            </page>
                        </notebook>

                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
                    </div>

                </form>
            </field>
        </record>

        <record id="invoice_exchange_tree" model="ir.ui.view">
            <field name="name">invoice.exchange.tree</field>
            <field name="model">invoice.exchange</field>
            <field name="arch" type="xml">
                <tree string="Invoice Exchange Request">
                    <field name="employee_id"/>
                    <field name="request_date"/>
                    <field name="amount"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>


        <record id="invoice_exchange_action" model="ir.actions.act_window">
            <field name="name">Invoice Exchange Request</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">invoice.exchange</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                    Create your First Invoice Exchange Request !
                </p>
            </field>
        </record>

        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="invoice_exchange_menu" name="Invoice Exchange Request" parent="hr.menu_hr_employee_payroll"
                  action="invoice_exchange_action" sequence="11"/>


        <record id="view_move_form_inherit" model="ir.ui.view">
            <field name="name">account.move.form.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='journal_id']" position="after">
                    <!-- Add your fields or attributes here -->
                    <field name="invoice_exchange_id" invisible="1"/>
                </xpath>

            </field>
        </record>


    </data>
</odoo>