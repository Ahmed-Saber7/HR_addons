<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <template id="attendance_report_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <t t-if="report_language == 'en'">
                        <h3 style="text-align: center;font-family:serif;fontsize:16px;">
                            Attendance Report
                        </h3>
                        <br/>
                        <br/>
                        <table class="table table-bordered table-striped" name="crossovered_budget_line_table"
                               style="width:100%;direction:ltr;">
                            <thead>
                                <tr>
                                    <th class="text-center" style="width:4%">#</th>
                                    <th class="text-center" scope="col">Employee Name</th>
                                    <th class="text-center" scope="col">Check In</th>
                                    <th class="text-center" scope="col">Check Out</th>
                                    <th class="text-center" scope="col">Worked Hours</th>
                                </tr>
                            </thead>
                            <t t-set="i" t-value="1"/>
                            <t t-set="const" t-value="0"/>
                            <tbody>
                                <t t-foreach="attendances" t-as="att">
                                    <tr>
                                        <td class="text-center">
                                            <span t-esc="i"/>
                                            <t t-set="i" t-value="i+1"/>
                                        </td>
                                        <td class="text-center">
                                            <span t-esc="att['name']"/>
                                        </td>
                                        <td class="text-center">
                                            <span t-esc="att['check_in']"/>

                                        </td>
                                        <td class="text-center">
                                            <span t-esc="att['check_out']"/>
                                        </td>
                                        <td class="text-center">
                                            <span t-esc="round(att['worked_hours'], 2)"/> /Hrs
                                        </td>

                                    </tr>
                                </t>
                            </tbody>
                        </table>

                    </t>
                    <t t-if="report_language == 'ar'">
                        <h3 style="text-align: center;fontsize:16px;">
                            تقرير الحضور
                        </h3>
                        <br/>
                        <br/>
                        <table class="table table-bordered table-striped" name="crossovered_budget_line_table"
                               style="width:100%;direction:rtl;">
                            <thead>
                                <tr>
                                    <th class="text-center" style="width:4%">#</th>
                                    <th class="text-center" scope="col">اسم الموظف</th>
                                    <th class="text-center" scope="col">تاريخ الحضور</th>
                                    <th class="text-center" scope="col">تاريخ الانصراف</th>
                                    <th class="text-center" scope="col">ساعات الحضور</th>
                                </tr>
                            </thead>
                            <t t-set="i" t-value="1"/>
                            <t t-set="const" t-value="0"/>
                            <tbody>
                                <t t-foreach="attendances" t-as="att">
                                    <tr>
                                        <td class="text-center">
                                            <span t-esc="i"/>
                                            <t t-set="i" t-value="i+1"/>
                                        </td>
                                        <td class="text-center">
                                            <span t-esc="att['name']"/>
                                        </td>
                                        <td class="text-center">
                                            <span t-esc="att['check_in']"/>

                                        </td>
                                        <td class="text-center">
                                            <span t-esc="att['check_out']"/>
                                        </td>
                                        <td class="text-center">
                                            <span t-esc="round(att['worked_hours'], 2)"/> / ساعات
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>

                    </t>
                </div>
            </t>
        </t>
    </template>
</odoo>