<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="attendance_report_view" model="ir.ui.view">
        <field name="name">attendance Report</field>
        <field name="model">attendance.report</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="date_from"/>
                    </group>
                    <group>
                        <field name="date_to"/>
                        <field name="report_language"/>
                    </group>
                </group>
                <footer>
                    <button name="check_report" string="Print" type="object" default_focus="1" class="oe_highlight"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="attendance_report_view_action" model="ir.actions.act_window">
        <field name="name">attendance Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">attendance.report</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="attendance_report_view"/>
        <field name="target">new</field>
    </record>

    <!-- This Menu Item Must have a parent -->
    <menuitem id="attendance_report_view_action_menu" name="Attendance Report" parent="hr_attendance.menu_hr_attendance_root" sequence="80"/>

    <!-- This Menu Item must have a parent and an action -->
    <menuitem id="attendance_report_view_action_report_menu" name="Attendance Report"
              parent="attendance_report_view_action_menu"
              action="attendance_report_view_action" sequence="1"/>
</odoo>