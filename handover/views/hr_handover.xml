<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_handover_form_view" model="ir.ui.view">
        <field name="name">hr.handover.form.view</field>
        <field name="model">hr.handover</field>
        <field name="arch" type="xml">
            <form string="Employees Handover">
                <header>
                    <button name="d_manager_confirm" string="Confirm" class="oe_highlight" states="d_manager"
                            type="object"/>
                    <button name="purchase_confirm" string="Confirm" class="oe_highlight" states="purchase"
                            type="object" groups="purchase.group_purchase_manager"/>
                    <button name="hr_manager_confirm" string="Confirm" groups="hr.group_hr_manager" class="oe_highlight"
                            states="hr_manager" type="object"/>
                    <button name="accounting_manager_confirm" string="Confirm" class="oe_highlight"
                            states="accounting_manager" type="object" groups="account.group_account_manager"/>
                    <button name="reject" string="Reject" type="object" states="accounting_1,g_manager,accounting_2"/>
                    <field name="state" widget="statusbar"/>
<!--                    <button name="check_handover" string="Check Handover" states="d_manager" class="oe_highlight"-->
<!--                            type="object"/>-->
                </header>

                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="employee_id"/>
                            <field name="employee_company_id"/>
                            <field name="employee_department_id"/>
                            <field name="joining_date"/>
                            <field name="sales_person" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Internal Notes" name="internal_notes">
                            <field name="d_manager_notes" placeholder="Add a note"
                                   attrs="{'readonly': [('state', '!=', 'd_manager')]}"/>
                            <field name="purchase_notes" placeholder="Add a note"
                                   attrs="{'readonly': [('state', '!=', 'purchase')]}"/>
                            <field name="hr_manager_notes" placeholder="Add a note"
                                   attrs="{'readonly': [('state', '!=', 'hr_manager')]}"/>
                            <field name="accounting_manager_notes" placeholder="Add a note"
                                   attrs="{'readonly': [('state', '!=', 'accounting_manager')]}"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
                </div>

            </form>
        </field>
    </record>
    <record id="hr_handover_tree_view" model="ir.ui.view">
        <field name="name">hr.handover.tree.view</field>
        <field name="model">hr.handover</field>
        <field name="arch" type="xml">
            <tree string="Employees Handover">
                <field name="employee_id"/>
            </tree>
        </field>
    </record>
    <record id="act_hr_handover" model="ir.actions.act_window">
        <field name="name">Employees Handover</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.handover</field>
        <field name="view_mode">tree,form</field>
        <!--        <field name="domain">[('employee_id.user_id.id','=',uid)]</field>-->
        <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('hr_handover_tree_view')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('hr_handover_form_view')})]"/>
    </record>
    <menuitem id="menu_hr_handover"
              name="Handover Request"
              parent="hr.menu_hr_employee_payroll"
              action="act_hr_handover"
              sequence="5"/>

</odoo>